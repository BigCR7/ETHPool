{
  "name": "solidity-starter",
  "version": "0.1.0",
  "description": "Solidity starter",
  "main": "index.js",
  "scripts": {
    "prepublishOnly": "scripts/prepublish",
    "build": "scripts/build",
    "clean": "rm -rf build/ cache/ dist/",
    "compile": "buidler compile",
    "test": "scripts/test",
    "test:gas": "RUN_EVM=true REPORT_GAS=true scripts/test",
    "test:coverage": "scripts/coverage",
    "lint": "npm run lint:ts && npm run lint:sol",
    "lint:fix": "npm run lint:ts:fix && npm run lint:sol:fix",
    "lint:ts": "eslint '*/**/*.{js,ts}'",
    "lint:ts:fix": "eslint '*/**/*.{js,ts}' --fix",
    "lint:sol": "solium --dir ./contracts",
    "lint:sol:fix": "solium --dir ./contracts --fix",
    "prettier": "npm run prettier:ts && npm run prettier:sol",
    "prettier:ts": "prettier --write 'test/**/*.ts'",
    "prettier:sol": "prettier --write 'contracts/*.sol'",
    "security": "scripts/security",
    "flatten": "scripts/flatten",
    "abi:extract": "truffle-abi -d ./build/contracts -o ./build/abis/ -v",
    "typechain": "typechain --target ethers-v5 --outDir build/typechain/contracts 'build/abis/*.json'",
    "verify": "buidler verify"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomiclabs/buidler": "^1.4.4",
    "@nomiclabs/buidler-ethers": "^2.0.0",
    "@nomiclabs/buidler-etherscan": "^2.0.0",
    "@nomiclabs/buidler-waffle": "^2.0.0",
    "@typechain/ethers-v5": "^1.0.0",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.6.2",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "buidler-gas-reporter": "^0.1.3",
    "chai": "^4.2.0",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-mocha-no-only": "^1.1.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "ethereum-waffle": "^3.0.2",
    "ethers": "^5.0.9",
    "ethlint": "^1.2.5",
    "prettier": "^2.1.1",
    "prettier-plugin-solidity": "^1.0.0-alpha.56",
    "solidity-coverage": "^0.7.10",
    "truffle-flattener": "^1.4.4",
    "ts-node": "^9.0.0",
    "typechain": "^2.0.0",
    "typescript": "^4.0.2"
  }
}
